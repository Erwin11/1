{
  "name": "CSViz",
  "version": "0.0.0",
  "description": "Simple geo data viz for CSV files",
  "main": "main.js",
  "scripts": {
    "lib-css": "cat node_modules/mapbox.js/theme/style.css node_modules/chartist/libdist/chartist.min.css > build/lib.css",
    "lib-assets": "cp -r node_modules/mapbox.js/theme/images build/",
    "lib": "npm run lib-css && npm run lib-assets",
    "build-js": "browserify main.js -t [ reactify --everything --harmony ] | uglifyjs -mc > build/bundle.js",
    "build-css": "node-sass assets/sass/main.scss build/bundle.css",
    "build": "npm run lib && npm run build-js && npm run build-css",
    "watch-css": "watchy -w assets/sass -- 'npm run build-css'",
    "watch-js": "watchify main.js -t [ reactify --everything --harmony ] -o build/bundle.js -dv",
    "watch": "npm run lib && npm run watch-js & npm run watch-css",
    "clean": "rm -rf build && mkdir build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/csviz/csviz.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/csviz/csviz/issues"
  },
  "homepage": "https://github.com/csviz/csviz",
  "dependencies": {
    "flux": "^2.0.1",
    "lodash": "^2.4.1",
    "mapbox.js": "^2.1.4",
    "react": "^0.11.2",
    "react-chartist": "^0.1.3",
    "react-document-title": "^0.1.2",
    "react-router": "^0.9.4",
    "react-select-box": "^0.8.1",
    "topojson": "^1.6.18",
    "xhr": "^1.17.0"
  },
  "devDependencies": {
    "catw": "^0.2.0",
    "node-sass": "^1.0.3",
    "reactify": "^0.14.0",
    "watchify": "^2.1.0",
    "watchy": "^0.5.3"
  }
}
