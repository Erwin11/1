{
  "name": "CSViz",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build-js": "browserify main.js -t [ reactify --everything ] | uglifyjs -mc > build/bundle.js",
    "build-css": "cat css/*.css > build/bundle.css",
    "build": "npm run build-js && npm run build-css",
    "watch-js": "watchify main.js -t [ reactify --everything ] -o build/bundle.js -dv",
    "watch-css": "catw css/*.css -o build/bundle.css -v",
    "watch": "npm run watch-js & npm run watch-css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Wiredcraft/CSViz.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Wiredcraft/CSViz/issues"
  },
  "homepage": "https://github.com/Wiredcraft/CSViz",
  "dependencies": {
    "flux": "^2.0.1",
    "react": "^0.11.2",
    "react-router": "^0.9.4"
  },
  "devDependencies": {
    "catw": "^0.2.0",
    "reactify": "^0.14.0",
    "watchify": "^2.1.0"
  }
}
